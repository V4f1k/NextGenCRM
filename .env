# NextGenCRM Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/nextgencrm

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-change-in-production-make-it-different-from-secret-key

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,https://yoursite.com

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_NAME=NextGenCRM
APP_VERSION=1.0.0

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Monitoring & Logging (optional)
SENTRY_DSN=your-sentry-dsn-url